<%- include('../partials/header') -%>

<% if(typeof errors != 'undefined'){ %>
<ul>
<% for(var i = 0; i < errors.length; i++) { %>
    <div class="alert alert-success" role="alert">
        <li> <%= errors[i].msg %></li>
      </div>
<% } %>
</ul>
<% } %>


